<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
    <shape>

        <solid android:color="#0F000000" />


        <corners android:radius="8dp" />

        <stroke
                android:width="1dp"
                android:color="#FFFFFF" />

        <padding
                android:bottom="1dp"
                android:left="10dp"
                android:right="10dp"
                android:top="1dp" />
    </shape>
    </item>
    <item>
        <shape>

            <solid android:color="#00000000" />


            <corners android:radius="8dp" />

            <stroke
                    android:width="1dp"
                    android:color="#FFFFFF" />

            <padding
                    android:bottom="1dp"
                    android:left="10dp"
                    android:right="10dp"
                    android:top="1dp" />
        </shape>
    </item>
</selector>